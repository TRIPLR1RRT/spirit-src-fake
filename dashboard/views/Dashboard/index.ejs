<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Spirit Bot</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../../partials/Header') %>
    <% if (user) { %>
        <main>
            <h2 class="server-page">Your Servers</h2>
            <div class="server-cards">
                <% if (guilds && guilds.length > 0) { %>
                    <% guilds.forEach(guild => { %>
                        <a href="/dashboard/<%= guild.id %>/" class="server-card-link">
                            <div class="server-card">
                                <img src="<%= guild.icon ? 'https://cdn.discordapp.com/icons/' + guild.id + '/' + guild.icon + '.png' : '/images/default-guild-icon.png' %>" alt="<%= guild.name %>" class="server-card-img">
                                <div class="server-card-info">
                                    <h3 class="server-card-name"><%= guild.name %></h3>
                                    <p class="server-card-role"><%= guild.role %></p> 
                                </div>
                            </div>
                        </a>
                    <% }); %>
                <% } else { %>
                    <p>You are not in any servers with the required permissions</p>
                <% } %>
            </div>
        </main>
    <% } %>
</body>
</html>
